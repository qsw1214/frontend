<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.mrbird.febs.system.mapper.DeptMapper">
    <!--新增部门-->
    <insert id="insertDept" parameterType="java.util.Map">
        insert into t_dept(DEPT_ID,PARENT_ID,DEPT_NAME,ORDER_NUM,CREATE_TIME,MODIFY_TIME) values (#{id},#{parentid},#{name},#{order},now(),now())
    </insert>

    <!--更加id更新部门-->
    <update id="updateDept" parameterType="java.util.Map">
        update t_dept set PARENT_ID=#{parentid},DEPT_NAME=#{name},ORDER_NUM=#{order},MODIFY_TIME=now() where DEPT_ID=#{id}
    </update>

    <!--根据id删除部门-->
    <delete id="deleteDept" parameterType="string">
        delete from t_dept where DEPT_ID=#{deptId}
    </delete>
</mapper>