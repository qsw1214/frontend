<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.mrbird.febs.system.mapper.UserDeptMapper">
    <!--新增用户部门-->
    <insert id="insertUserDept" parameterType="java.lang.Long">
        insert into t_user_dept values (#{userid},#{deptId})
    </insert>


    <!--删除用户部门关系-->
    <delete id="deleteUserDept" parameterType="java.lang.Long">
        delete from t_user_dept where user_id=#{userid}
    </delete>
    
    <select id="getUserDepts" parameterType="long" resultType="dept">
        SELECT 
        d.dept_id deptId,
        d.parent_id parentId,
        d.dept_name deptName,
        d.order_num orderNum,
        d.dept_grade deptGrade,
        d.create_time createTime,
        d.modify_time modifyTime
        FROM t_user_dept ud 
        LEFT JOIN t_dept d ON (ud.user_id = d.user_id)
        WHERE  d.user_id = #{userId}
    </select>
</mapper>