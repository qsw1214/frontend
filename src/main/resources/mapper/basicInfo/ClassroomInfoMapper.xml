<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.mrbird.febs.basicInfo.mapper.ClassroomInfoMapper">

    <resultMap id="classroomInfo" type="cc.mrbird.febs.basicInfo.entity.ClassroomInfo">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="school_id" jdbcType="INTEGER" property="schoolId"/>
        <result column="location" jdbcType="CHAR" property="location"/>
        <result column="contain_num" jdbcType="INTEGER" property="containNum"/>
        <result column="introduce" jdbcType="CHAR" property="introduce"/>
        <result column="url" jdbcType="CHAR" property="url"/>
        <result column="state" jdbcType="INTEGER" property="state"/>
        <result column="subject" jdbcType="VARCHAR" property="subject"/>
        <result column="garde" jdbcType="VARCHAR" property="garde"/>
    </resultMap>

    <select id = "getClassroomInfoByCityCountry" resultType="cc.mrbird.febs.basicInfo.entity.ClassroomInfo" parameterType = "java.util.Map">
        select * from jcc_classroom_info room
          LEFT JOIN jcc_school_info school ON room.school_id = school.id
          WHERE  1 = 1
            <if test = "provinceDeptId != null">
                and school.province_dept_id = #{provinceDeptId}
            </if>
            <if test = "cityDeptId != null">
                and school.city_dept_id = #{cityDeptId}
            </if>
            <if test ="countryDeptId != null">
                and school.country_dept_id = #{countryDeptId}
            </if>
    </select>

    <select id="getClassroomCount" parameterType="java.util.Map" resultType="integer">
        SELECT count(1) FROM jcc_classroom_info room
        LEFT JOIN jcc_school_info school ON room.school_id = school.id
        WHERE  1 = 1
        <if test = "provinceDeptId != null">
            and school.province_dept_id = #{provinceDeptId}
        </if>
        <if test = "cityDeptId != null">
            and school.city_dept_id = #{cityDeptId}
        </if>
        <if test ="countryDeptId != null">
            and school.country_dept_id = #{countryDeptId}
        </if>
    </select>
</mapper>
